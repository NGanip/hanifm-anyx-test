type Mutation {
    calculatePayment(paymentRq: PaymentRq!): PaymentRs!
}

type Query {
    doNothing: String
}

input PaymentRq {
    price: String!
    price_modifier: Float!
    payment_method: String!
    datetime: String!
}

type PaymentRs {
    data: PaymentInfo
    error: String
}

type PaymentInfo {
    final_price: String
    points: Int
}